.lightbox
    backface-visibility hidden
    background-color rgba(0, 0, 0, 0.8)
    display block
    height 100vh
    left 0
    position fixed
    top 0
    transition opacity 0.3s ease
    width 100vw
    z-index 1

.lightbox__box
    left 50%
    position absolute
    top 50%
    transform translate(-50%, -50%)
    width 80%
    max-height 80vh

    @media small
        width 90%

.lightbox__close
    background-color yellow
    display block
    height 40px
    width 40px

    &::after
        content 'X'
        color white
        font-size 20px
        line-height 2
        font-weight bold
        text-align center
        display block
        width 100%
        height 100%

