label
    color inherit
    display block
    font-family 'roboto-bold'
    font-size 16px
    line-height 1.87
    margin-bottom 16px

.label--small
    color gray
    font-family inherit
    font-size 12px
    line-height 1.25
    text-transform uppercase

[type='text']
[type='password']
[type='date']
[type='datetime']
[type='datetime-local']
[type='month']
[type='week']
[type='email']
[type='number']
[type='search']
[type='tel']
[type='time']
[type='url']
[type='color']
select
textarea
    appearance none
    background-color transparent
    border-bottom 6px solid yellow-lighter
    display block
    font-family inherit
    font-size inherit
    margin-bottom 64px
    padding-bottom 4px
    width 100%

[type="checkbox"]
[type="radio"]
    margin-right 10px

select
    background-image url('../../assets/images/arrow-small.svg')
    background-color transparent
    background-repeat no-repeat
    background-position right center

.select--date
    background url('../../assets/images/arrow-down-white.svg') no-repeat center right 13px, linear-gradient(90deg, white 50%, yellow-light 50%)
    width 80px
    height 40px
    margin-right 20px
    padding-bottom 0
    border-bottom 0
    display inline-block
    padding-left 10px

textarea
    background-image linear-gradient(transparent, transparent 40px, yellow-lighter 40px)
    background-size 100% 46px
    border-bottom 0
    padding-bottom 0
    line-height 46px

.input--small
    max-width 50%

.input--error
    border-bottom-color red
