// Typography
@font-face
    font-family 'francois-one'
    font-style normal
    font-weight normal
    src url('../assets/fonts/francois-one.woff2') format('woff2')

@font-face
    font-family 'tuna'
    font-style normal
    font-weight normal
    src url('../assets/fonts/tuna-medium.woff2') format('woff2')

@font-face
    font-family 'roboto-regular'
    font-style normal
    font-weight normal
    src url('../assets/fonts/roboto-regular.woff2') format('woff2')

@font-face
    font-family 'roboto-light'
    font-style normal
    font-weight normal
    src url('../assets/fonts/roboto-light.woff2') format('woff2')

@font-face
    font-family 'roboto-medium'
    font-style normal
    font-weight normal
    src url('../assets/fonts/roboto-medium.woff2') format('woff2')

@font-face
    font-family 'roboto-bold'
    font-style normal
    font-weight bold
    src url('../assets/fonts/roboto-bold.woff2') format('woff2')

@font-face
    font-family 'montserrat-bold'
    font-style normal
    font-weight bold
    src url('../assets/fonts/montserrat-bold.woff2') format('woff2')

html
    -moz-osx-font-smoothing grayscale
    -webkit-font-smoothing antialiased
    text-rendering optimizeLegibility

body
    background-color beige
    color dark
    font-family 'roboto-regular'
    font-size base
    line-height 1.5

h1
    color inherit
    font-family 'tuna'
    font-size 48px
    line-height 1.17
    margin-bottom 18px

h2
    color inherit
    font-family 'tuna'
    font-size 24px
    line-height 1.17

h3
    color inherit
    font-family 'roboto-bold'
    font-size 24px
    line-height 1.17
    text-transform uppercase

h4
    color inherit
    font-family inherit
    font-size 14px
    line-height 1.25
    text-transform uppercase
    margin-bottom 18px

    @media large
        font-size 16px

h5
    color inherit
    font-family inherit
    font-size 20px
    line-height 1.3

h6
    color inherit
    font-family 'roboto-light'
    font-size 16px
    line-height 1.31

p
    margin-bottom 20px

a
    color inherit
    font-size inherit
    line-height inherit

strong
    font-family 'roboto-bold'

small
    font-size 12px
    line-height 1.33

hr
    background-color beige
    box-sizing content-box
    border 0
    height 6px
    margin-bottom 40px
    width 100%

.link
    text-decoration underline
